<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="pu-loljpa" transaction-type="RESOURCE_LOCAL">
		<!-- <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider> -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>service.Cliente</class>
		<class>service.ItemCarrinho</class>
		<class>service.Livro</class>
		<class>service.Pedido</class>
		<properties>
			
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url"	value="jdbc:postgresql://localhost:5432/Livraria" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="123456" />		

<!-- 			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create" />
			<property name="javax.persistence.sql-load-script-source" value="initdb.sql" />  -->

			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />
<!-- 			<property name="hibernate.hbm2ddl.import_files" value="initdb.sql" />
 -->				
		</properties>
	</persistence-unit>
</persistence>
